// 通用样式 和 重写样式
$baseColor:#333;
$themeColor:#ff0000;
$c999:#999;
$c666:#666;
$fafa:#fafafa;
$white:#fff;
$e8e9:#e8e8e9;
$fangchan:#ce31ff;
$car:#ff9933;
$ccc:#cccccc;
$ff3:#FF3333;


// 字体大小
$fz14:14.0025px;
$fz16:0.2133rem;
$fz24:0.32rem;
$fz28:0.3733rem;
$fz30:0.4rem;
$fz32:0.4267rem;
$brd:0.1333rem;

.text-underline::after{
  position: absolute;
  content: '';
  width:100%;
  height: 1px;
  bottom: -0.08rem;
  left: 0;
}

//超过隐藏
.text-overflow{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
  

.clearfix:before,.clearfix:after {
  content: "";
  display: block;
  clear: both;
}
.clearfix {
  zoom: 1;
}